{
  "compilerOptions": {
    // 与 Vue 的浏览器支持保持一致
    "target": "ES2015",
    // 这可以对 `this` 上的数据 property 进行更严格的推断
    "strict": false,
    "noImplicitAny": false,
    // 如果使用 webpack 2+ 或 rollup，可以利用 tree-shake:
    "checkJs": false,
    "module": "es2015",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "vue-shim.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}